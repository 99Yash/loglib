{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": [
        "build",
        "$NODE_ENV",
        "$NEXT_PUBLIC_LOGLIB_URL",
        "$LOGLIB_URL",
        "$VERCEL_URL",
        "$NEXT_PUBLIC_VERCEL_URL"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    }
  },
  "globalDependencies": [".env", ".env.local", "tsconfig.json"]
}
