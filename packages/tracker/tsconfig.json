{
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowUmdGlobalAccess": true,
    "noEmit": true
  },
  "include": ["src", "test", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
